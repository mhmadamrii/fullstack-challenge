generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id        String   @id @default(uuid())
  name      String
  price     Float
  qty       Int
  createdAt DateTime @default(now())
}

model orders {
  id         String   @id @default(uuid())
  productId  String
  totalPrice Float
  status     String
  createdAt  DateTime @default(now())
}
